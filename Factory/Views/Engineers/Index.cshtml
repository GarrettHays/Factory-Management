@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>ENGINEERS:</h1>

@if (@Model.Count == 0)
{
  <h3>No Engineers have been added yet!</h3>
} 

@foreach (Engineer engineer in Model)
{
  <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId }) | @engineer.JoinEntities.Count Machine(s)</li>
}
<span></span>
<p>@Html.ActionLink("Add new Engineer", "Create", null, null, new { @class="htmlButton"})</p>