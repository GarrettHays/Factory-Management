@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<h1>MACHINES:</h1>

@if (@Model.Count == 0)
{
  <h3>No Machines have been added yet!</h3>
} 

@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId }) | @machine.JoinEntities.Count Engineers(s)</li>
}
<span></span>
<p>@Html.ActionLink("Add new Machine", "Create", null, null, new { @class="htmlButton"})</p>